<!--index.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells__title">找回NFLSIO账户密码</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">邮箱或手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input"/>
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn">获取动态码</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">动态码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindPasswordInput" password />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">新的密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindPasswordInput" password />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">重复密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindPasswordInput" password />
                </view>
            </view>

        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="login">重置密码</button>
        </view>
    </view>
</view>