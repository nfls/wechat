<!--index.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells__title">南外人账户登录</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">用户名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindUsernameInput" placeholder="请输入用户名"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindPasswordInput" password placeholder="请输入密码"/>
                </view>
            </view>
        </view>
        <view class="weui-cells__tips">请使用您的南外人账户登录。登录完成后将于您的微信绑定，下次打开将自动登录。</view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="login">登录</button>
        </view>
    </view>
</view>