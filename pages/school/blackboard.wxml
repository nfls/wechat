<import src="../../lib/wxParse/wxParse.wxml"/>
<view style="background-color: #f8f8f8" wx:if="{{classes.length > 0}}">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">课堂</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindClazChange" value="{{clazIndex}}" range="{{classes}}">
                        <view class="weui-select weui-select_in-select-after">{{classes[clazIndex]}}</view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">老师</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="markdown">
                <template is="wxParse" data="{{wxParseData:teacher.nodes}}"/>
            </view>
        </view>
        <view class="weui-cells__title" >公告</view>
        <view class="weui-cells weui-cells_after-title" style="margin-bottom: 30px;">
            <view class="markdown">
                <template is="wxParse" data="{{wxParseData:announcement.nodes}}"/>
            </view>
        </view>

        <view class="page__bd" wx:for="{{detail.notices}}">
            <view class="weui-cells__title">{{item.time}}</view>
            <view class="weui-form-preview">
                <view style="margin-left: 15px; margin-right: 15px; margin-top: 10px;">
                    {{item.content}}
                </view>
                <view class="weui-form-preview__bd" wx:if="{{item.deadline}}">
                    <view class="weui-form-preview__item">
                        <view class="weui-form-preview__label">截止日期</view>
                        <view class="weui-form-preview__value">{{item.deadline}}</view>
                    </view>
                </view>
                <view class="weui-cells__title" wx:if="{{item.attachment.length > 0}}">附件</view>
                <view class="weui-cells weui-cells_after-title" >
                    <view class="weui-cell" wx:for="{{item.attachment}}" wx:for-item="attachment" bindtap="preview" data-name="{{attachment.href}}">
                        <view class="weui-cell__bd weui-cell__ft_in-access">{{attachment.name}}</view>
                    </view>
                </view>
                <view style="margin:5px;"></view>
            </view>
        </view>
    </view>
</view>